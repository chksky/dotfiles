// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "icon_theme": "Zed (Default)",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "edit_predictions": {
    "disabled_globs": ["**/*.json"],
    // When to show edit predictions previews in buffer.
    // This setting takes two possible values:
    // 1. Display predictions inline when there are no language server completions available.
    //     "mode": "eager"
    // 2. Display predictions inline only when holding a modifier key (alt by default).
    //     "mode": "subtle"
    "mode": "subtle"
  },
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_line_height": {
    "custom": 1.45
  },
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Ayu Dark"
  },
  "minimap": { "show": "auto", "current_line_highlight": "all" },
  // buggy
  "hide_mouse": "never",
  // upd unused variables color
  "unnecessary_code_fade": 0.7,
  "completion_documentation_secondary_query_debounce": 100,
  "show_whitespaces": "selection",
  "indent_guides": {
    "enabled": false,
    "active_line_width": 2,
    "coloring": "fixed",
    "background_coloring": "disabled"
  },
  "current_line_highlight": "all",
  "cursor_shape": "bar",
  "ensure_final_newline_on_save": false,
  "project_panel": {
    "default_width": 260,
    "dock": "left"
  },
  "collaboration_panel": {
    "button": false
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "git_status": true,
    "show_diagnostics": "all"
  },
  "formatter": "prettier",
  "tab_size": 2,
  "journal": {
    "hour_format": "hour24"
  },
  "prettier": {
    "allowed": true,
    "plugins": [],
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  }
}
