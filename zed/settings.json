// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "icon_theme": "Material Icon Theme",
  "features": {
    "inline_completion_provider": "copilot"
  },
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_line_height": {
    "custom": 1.45
  },
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Ayu Dark"
  },
  // upd unused variables color
  "unnecessary_code_fade": 0.7,
  "completion_documentation_secondary_query_debounce": 100,
  "show_whitespaces": "selection",
  "indent_guides": {
    "enabled": false,
    "active_line_width": 2,
    "coloring": "fixed",
    "background_coloring": "disabled"
  },
  "ensure_final_newline_on_save": false,
  "project_panel": {
    "default_width": 260,
    "dock": "left"
  },
  "collaboration_panel": {
    "button": false
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": true
  },
  "tabs": {
    "git_status": true
  },
  "formatter": "prettier",
  "tab_size": 2,
  "journal": {
    "hour_format": "hour24"
  },
  "prettier": {
    "allowed": true,
    "plugins": [],
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  }
}
